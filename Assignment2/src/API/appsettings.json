{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=miniprojectmanager.db"
  },
  "Jwt": {
    "SecretKey": "ThisIsASecretKeyForJWTTokenGenerationAndValidation12345!",
    "Issuer": "MiniProjectManagerAPI",
    "Audience": "MiniProjectManagerClient"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
